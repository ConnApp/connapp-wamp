{
    "name": "connapp-wamp",
    "version": "1.0.0",
    "description": "Demo app for using Crossbar.io with Node.js",
    "main": "src/index.js",
    "scripts": {
        "test": "NODE_ENV=test nyc ava --verbose",
        "build": "./install_crossbar.sh",
        "start": "./start_crossbar.sh",
        "test:watch": "NODE_ENV=test ava --watch --verbose"
    },
    "ava": {
        "files": [
            "src/**/*.test.js"
        ],
        "source": [
            "src/**/*"
        ],
        "failFast": true,
        "require": [
            "babel-polyfill",
            "./src/utils/require"
        ]
    },
    "keywords": [
        "crossbario",
        "wamp",
        "api",
        "mongoose",
        "websocket"
    ],
    "author": "Yan Nunes",
    "license": "MIT",
    "dependencies": {
        "lodash": "^4.17.10",
        "loglevel": "^1.6.1",
        "mongoose": "^5.1.1",
        "nodemon": "^1.17.4",
        "to-slug-case": "^1.0.0",
        "wampy": "^6.2.0",
        "websocket": "^1.0.26"
    },
    "devDependencies": {
        "ava": "^0.25.0",
        "babel-eslint": "^8.2.3",
        "babel-polyfill": "^6.26.0",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.1.0",
        "mongodb-memory-server": "^1.7.4",
        "nyc": "^11.8.0",
        "prettier": "^1.12.1",
        "prettier-eslint": "^8.8.1",
        "proxyquire": "^2.0.1",
        "sinon": "^5.0.7"
    }
}
